extends ../../layouts/default.pug

block style 
  link(rel="stylesheet", href="/client/css/print-create.css")

block main 
  .container 
    .row 
      .col-12 
        h2 Tạo in ấn 
    .row 
      .col-12 
        .inner-form.mb-5
          .inner-left-content 
            .inner-image 
              img(src="/client/images/print-image.svg" alt="")
            .inner-desc  
              span Chi phí: <span>1000đ/tờ/đen trắng</span>
              span Chi phí: <span>3000đ/tờ/màu</span>
          .inner-right-content 
            h5 In đồ án tốt nghiệp
            form(action="/print/create/get-print-info" method="POST") 
              .row 
                .col-6
                  div(class="form-group mb-3")
                    label(for="type-print") Chọn loại in 
                    select(class="form-select form-select-sm" name="type-print")
                      option(selected value="blackwhite") In trắng đen
                      option(value="colored") In màu
                  div(class="form-group mb-3")
                    label(for="pagenum") Số lượng tờ 1 bản
                    input(
                      type="text"
                      class="form-control"
                      name="pagenum"
                      id="pagenum"
                      placeholder="Số lượng tờ"
                      required
                    )
                  .checkbox
                    div(class="form-check")
                      input(
                        type="radio"
                        class="form-check-input" 
                        id="frontside"
                        value="front"
                        name="side"
                        required
                      )
                      label(for="frontside" class="form-check-label") Mặt trước
                    div(class="form-check")
                      input(
                        type="radio"
                        class="form-check-input"
                        id="backside"
                        value="back"
                        name="side"
                        required
                      )
                      label(for="backside" class="form-check-label") Mặt sau
                    div(class="form-check")
                      input(
                        type="radio"
                        class="form-check-input"
                        id="bothside"
                        value="both"
                        name="side"
                        required
                      )
                      label(for="bothside" class="form-check-label") Hai mặt
                .col-6
                  div(class="form-group mb-3")
                    label(for="filename") Chọn file 
                    input(
                      type="file"
                      class="form-control"
                      name="filename"
                      id="filename"
                      required
                    )
                  div(class="form-group mb-3")
                    label(for="size") Khổ giấy 
                    select(class="form-select form-select-sm" name="size")
                      option(value="A0") A0
                      option(value="A1") A1
                      option(value="A2") A2
                      option(value="A3") A3
                      option(selected value="A4") A4
                  div(class="form-group")
                    label(for="copy") Số lượng bản in
                    input(
                      type="text"
                      class="form-control"
                      placeholder="Vui lòng chọn"
                      name="copy"
                      id="copy"
                      required
                    )
              .row.text-center
                .col-12
                  div(class="form-group d-flex justify-content-center mt-4 mb-3")
                    button(
                      type="submit"
                      class="btn submit-button"
                    ) In ấn
                  b Thời gian dự kiến: 24h
              .messages
              each message in messages
                div= message 
                    

