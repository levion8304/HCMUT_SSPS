extends ../../layouts/default.pug

block style 
  link(rel="stylesheet", href="/admin/css/account-index.css")

block main 
  h1 Thông tin quản trị viên

  .container-fluid
    form
      .row.justify-content-evenly
        .col-5
          div(class="form-group my-3")
            label(for="fullname") Họ tên 
            input(
              type="text"
              class="form-control mt-1"
              id="fullname"
              name="fullname"
              value="Nguyễn Tất Đạt"
              readonly
            )
          div(class="form-group my-3")
            label(for="address") Địa chỉ
            input(
              type="text"
              class="form-control mt-1"
              id="address"
              name="address"
              value="499 Quang Trung, phường 10, Gò Vấp, TPHCM"
              readonly
            )
          div(class="form-group my-3")
            label(for="phone") Số điện thoại
            input(
              type="tel"
              class="form-control mt-1"
              id="phone"
              name="phone"
              value="1900.8198"
              readonly
            )
          div(class="form-group my-3")
            label(for="email") Gmail
            input(
              type="email"
              class="form-control mt-1"
              id="email"
              name="email"
              vallue="tatdat@gmail.com"
              readonly
            )
        .col-5
          div(class="form-group my-3")
            label(class="d-block") Giới tính
            input(
              type="radio"
              class="btn-check"
              id="sex1"
              name="sex"
            )
            label(for="sex1" class="btn btn-outline-danger button mt-1") Nam
            input(
              type="radio"
              class="btn-check"
              id="sex2"
              name="sex"
            )
            label(for="sex2" class="btn btn-outline-danger button mx-3 mt-1") Nữ
          div(class="form-group my-3")
            label(for="image") Hình ảnh 
            input(
              type="file"
              class="form-control mt-1"
              id="image"
              name="image"
              readonly
            )
          div(class="form-group my-3")
            label(for="role") Trạng thái
            input(
              type="text"
              class="form-control mt-1"
              id="role"
              name="role"
              value="Quản trị viên"
              readonly
            )
          div(class="form-group my-3")
            .row
              .col-6.d-flex.justify-content-center
                button(
                  type="submit"
                  class="btn btn-danger w-75 button"
                ) Chỉnh sửa
              .col-6.d-flex.justify-content-center
                button(
                  type="submit"
                  class="btn btn-danger w-75 button"
                ) Lưu
          