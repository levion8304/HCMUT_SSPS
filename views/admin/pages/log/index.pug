extends ../../layouts/default.pug

block style 
  link(rel="stylesheet", href="/admin/css/log-index.css")

block main 
  .container-fluid 
    .row 
      .col-12 
        .inner-statistics
          .inner-item 
            .inner-number #{users.length}
            .inner-desc Người
          .inner-item 
            .inner-number 5
            .inner-desc Mới
          .inner-item 
            .inner-number 0
            .inner-desc Hủy
    
    .row.my-4  
      .col-12 
        .inner-actions 
          .dropdown 
            button(
              data-bs-toggle="dropdown"
              class="btn filter-button"
              type="button"
            ) 
              div All 
              img(src="/admin/images/printer-arrow-down.svg" alt="")
          .dropdown 
            button(
              data-bs-toggle="dropdown"
              class="btn filter-button"
              type="button"
            ) 
              div All Departments
              img(src="/admin/images/printer-arrow-down.svg" alt="")
          div(class="delete-button")
            p Delete 
            img(src="/admin/images/log-delete-icon.svg" alt="")
    
    .row-my-5
      .col-12 
        table.table.table-hover.align-middle
          thead 
            tr 
              th 
                input(type="checkbox" name="checkall")
              th Họ và tên 
              th MSSV
              th Số điện thoại 
              th Công việc
              th Ngày tham gia 
              th 
          tbody.table-group-divider
            each userLogin, index in users
              tr 
                td 
                  input(type="checkbox" name="id")
                td
                  .inner-infouser 
                    .inner-image
                      img(src=userLogin.avatar alt="")
                    .inner-name #{userLogin.fullname}
                td #{userLogin.studentId}
                td #{userLogin.phoneNumber}
                td Sinh Viên 
                td #{loginLogs[index].createdAt.toLocaleString('vi-VN')}
                td 
                  img(src="/admin/images/log-more-icon.svg" alt="")
            
            


    .row.my-3.justify-content-center.text-center
      .col-5.d-flex.justify-content-center 
        ul.pagination.gap-3
          li.page-item
            a.page-link(href="#")
              span 
                svg(width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
                  path(d="M15 18L9 12L15 6" stroke="#747474" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
          li.page-item.active.page-number
            a.page-link(href="#") 1
          li.page-item.page-number 
            a.page-link(href="#") 2
          li.page-item.page-number 
            a.page-link(href="#") 3
          li.page-item
            a.page-link(href="#")
              span
                svg(width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
                  path(d="M9 18L15 12L9 6" stroke="#747474" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")


  