extends ../../layouts/default.pug

block style 
  link(rel="stylesheet", href="/admin/css/order-index.css")

block main 
  .container-fluid 
    .row.mb-5 
      ul(class="nav nav-underline mb-3")
        li(class="nav-item")
          a(class="nav-link active" href=`${prefixAdmin}/order`) Tất cả đơn đặt in
        li(class="nav-item")
          a(class="nav-link" href=`${prefixAdmin}/order?result=success`) Đơn in thành công
        li(class="nav-item")
          a(class="nav-link" href=`${prefixAdmin}/order?status=error`) Đơn in thất bại
      .inner-actions
        .input-box 
          img(src="/admin/images/order-filter-icon.svg" alt="")
          input(type="text" placeholder="Thêm điều kiện lọc")
        .garbage-bin 
          img(src="/admin/images/order-garbage-bin.svg" alt="")
    
    .row-my-5
      .col-12 
        table.table.table-hover.align-middle.table-striped
          thead 
            tr.text-center 
              th 
                input(type="checkbox" name="checkall")
              th Mã
              th Ngày tạo
              th Người dùng
              th Khố in
              th Mã máy in
              th Trạng thái
          tbody.table-group-divider
            each request in requests 
              tr.text-center 
                td 
                  input(type="checkbox" name="id")
                td #{request.requestId}
                td #{request.createdAt.toLocaleString("vi-VN")}
                td #{request.token}
                td #{request.stylePaperPrint.join(", ")}
                td 213
                td #{request.result == "printing" ? "Đang in" : request.result == "printed" ? "Đã in" : "Lỗi"}
            
                                
    .row.mt-5.justify-content-center.text-center
      .col-5.d-flex.justify-content-center 
        ul.pagination.gap-3
          li.page-item
            a.page-link(href="#")
              span 
                svg(width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
                  path(d="M15 18L9 12L15 6" stroke="#747474" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
          li.page-item.active.page-number
            a.page-link(href="#") 1
          li.page-item.page-number 
            a.page-link(href="#") 2
          li.page-item.page-number 
            a.page-link(href="#") 3
          li.page-item
            a.page-link(href="#")
              span
                svg(width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
                  path(d="M9 18L15 12L9 6" stroke="#747474" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")    